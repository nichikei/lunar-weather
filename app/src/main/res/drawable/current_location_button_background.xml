<?xml version="1.0" encoding="utf-8"?>
<!-- Premium gradient button for current location with glass morphism -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle shadow -->
    <item
        android:left="0dp"
        android:top="6dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#40000000"
                android:centerColor="#20000000"
                android:endColor="#00000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Gradient glass surface -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#4D7B5CFF"
                android:endColor="#4D9E4CFF" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#1AFFFFFF" />
        </shape>
    </item>
</layer-list>

