<?xml version="1.0" encoding="utf-8"?>
<!-- iOS-style floating settings button with subtle neon glow -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#55FFFFFF">

    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <item>
        <layer-list>
            <!-- Subtle purple neon glow -->
            <item
                android:left="-8dp"
                android:top="-8dp"
                android:right="-8dp"
                android:bottom="-8dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="40dp"
                        android:startColor="#387B5CFF"
                        android:centerColor="#1C7B5CFF"
                        android:endColor="#007B5CFF" />
                </shape>
            </item>

            <!-- Main glass button -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#4D7B5CFF"/> <!-- 30% opacity glass -->
                    <stroke
                        android:width="1dp"
                        android:color="#40FFFFFF"/> <!-- 25% refined border -->
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
