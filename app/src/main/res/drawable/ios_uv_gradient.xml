<?xml version="1.0" encoding="utf-8"?>
<!-- iOS UV Index Gradient: Green → Yellow → Orange → Red → Purple -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <gradient
        android:type="linear"
        android:angle="0"
        android:startColor="#65D48C"
        android:centerColor="#FFB900"
        android:endColor="#D0312D"
        android:useLevel="false" />
    
    <corners android:radius="4dp" />
    
</shape>
