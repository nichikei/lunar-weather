<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Far glow (largest) -->
    <item
        android:left="-5dp"
        android:top="0dp"
        android:right="-5dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#4048319D"
                android:centerColor="#2048319D"
                android:endColor="#0048319D" />
            <corners android:radius="35dp" />
        </shape>
    </item>

    <!-- Soft outer shadow (blur) -->
    <item
        android:left="0dp"
        android:top="6dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="120dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#50000000"
                android:centerColor="#25000000"
                android:endColor="#00000000" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Medium shadow -->
    <item
        android:left="0dp"
        android:top="4dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#80000000"
                android:centerColor="#40000000"
                android:endColor="#00000000" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Purple glow halo (strong) -->
    <item
        android:left="0dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#6648319D"
                android:centerColor="#4048319D"
                android:endColor="#0048319D" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Main active gradient -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="145"
                android:startColor="#48319D"
                android:centerColor="#3E2884"
                android:endColor="#48319D" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Glass overlay (stronger) -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#26FFFFFF" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Strong top highlight -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="100dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#66FFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Bright white border -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1.5dp"
                android:color="#B3FFFFFF" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Inner glow border -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#66FFFFFF" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Bottom inner shadow (depth) -->
    <item
        android:left="3dp"
        android:top="110dp"
        android:right="3dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#00000000"
                android:centerColor="#15000000"
                android:endColor="#30000000" />
            <corners android:radius="27dp" />
        </shape>
    </item>
</layer-list>
