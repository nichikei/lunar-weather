<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#30FFFFFF" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>

    <!-- Progress arc (partial circle) -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#8B7AB8" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
</layer-list>

