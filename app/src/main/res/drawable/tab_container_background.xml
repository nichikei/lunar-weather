<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:left="0dp"
        android:top="4dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#20000000"
                android:endColor="#00000000" />
            <corners android:radius="@dimen/tab_container_radius" />
        </shape>
    </item>

    <!-- Card Accent Gradient Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/gradient_card_accent_start"
                android:endColor="@color/gradient_card_accent_end" />
            <corners android:radius="@dimen/tab_container_radius" />
        </shape>
    </item>

    <!-- Glass Overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_glass" />
            <corners android:radius="@dimen/tab_container_radius" />
            <stroke
                android:width="1dp"
                android:color="@color/stroke_on_glass" />
        </shape>
    </item>
</layer-list>

