<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow circle effect -->
    <item
        android:left="-4dp"
        android:top="-2dp"
        android:right="-4dp"
        android:bottom="-6dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="35dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#40000000"
                android:centerColor="#20000000"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Purple glow effect -->
    <item
        android:left="-3dp"
        android:top="-3dp"
        android:right="-3dp"
        android:bottom="-3dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="32dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#507B5CFF"
                android:centerColor="#257B5CFF"
                android:endColor="#007B5CFF" />
        </shape>
    </item>

    <!-- Main FAB button -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="@color/gradient_glow_purple_start"
                android:endColor="@color/gradient_glow_purple_end" />
            <size
                android:width="@dimen/fab_size"
                android:height="@dimen/fab_size" />
        </shape>
    </item>

    <!-- Top highlight -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="28dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>

