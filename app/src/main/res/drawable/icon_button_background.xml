<?xml version="1.0" encoding="utf-8"?>
<!-- Premium icon button with enhanced glass effect and subtle glow -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#66FFFFFF">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- Subtle glow -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#337B5CFF"/>
                    <size android:width="42dp" android:height="42dp"/>
                </shape>
            </item>
            <!-- Main glass surface -->
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="#4D2A1B6B"/>
                    <stroke
                        android:width="1.5dp"
                        android:color="#40FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
