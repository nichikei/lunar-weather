<?xml version="1.0" encoding="utf-8"?>
<!-- Premium search bar with enhanced frosted glass blur and glowing depth -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle shadow for depth -->
    <item
        android:left="0dp"
        android:top="6dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#40000000"
                android:centerColor="#20000000"
                android:endColor="#00000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Main frosted glass surface with stronger blur effect -->
    <item>
        <shape android:shape="rectangle">
            <!-- Enhanced 35% transparent glass for stronger frosted effect -->
            <solid android:color="#592A1B6B" />
            <corners android:radius="24dp" />
            <!-- Refined border 2px white 10% -->
            <stroke
                android:width="2dp"
                android:color="#1AFFFFFF" />
        </shape>
    </item>
</layer-list>
