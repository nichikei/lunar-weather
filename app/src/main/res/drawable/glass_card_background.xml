<?xml version="1.0" encoding="utf-8"?>
<!-- Glassmorphic background - Frosted glass effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer for depth -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#10000000" />
        </shape>
    </item>
    
    <!-- Main glass background -->
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <!-- Frosted glass: semi-transparent white with blur effect -->
            <solid android:color="#18FFFFFF" />
            <!-- Border highlight for glass effect -->
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
    
    <!-- Inner glow for depth -->
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="23dp" />
            <stroke
                android:width="0.5dp"
                android:color="#15FFFFFF" />
        </shape>
    </item>
    
</layer-list>
