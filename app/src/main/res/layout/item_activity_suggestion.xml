<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ios_card_background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Icon + Title + Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Icon Container with colored background -->
            <FrameLayout
                android:id="@+id/iconContainer"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/icon_background_green">

                <TextView
                    android:id="@+id/txtActivityIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸƒ"
                    android:textSize="24sp" />

            </FrameLayout>

            <!-- Title and Category -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtActivityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning Run"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/txtActivityCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš½ SPORT"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="true" />

            </LinearLayout>

            <!-- Suitability Score Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#4CAF50">

                <TextView
                    android:id="@+id/txtSuitabilityScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.8"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/txtActivityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfect weather for outdoor running."
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="2dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:alpha="0.3"
            android:layout_marginBottom="12dp" />

        <!-- Reason -->
        <TextView
            android:id="@+id/txtActivityReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Ideal temperature and clear skies"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:alpha="0.85"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp" />

        <!-- Best Time -->
        <TextView
            android:id="@+id/txtBestTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â° Best time: Morning 6-10 AM"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:alpha="0.85"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Add to Calendar Button -->
        <TextView
            android:id="@+id/btnAddToCalendar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ðŸ“… Add to Calendar"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#4CAF50"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
