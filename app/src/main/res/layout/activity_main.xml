<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ios_sky_background"
    tools:context=".MainActivity">

    <!-- Video Background -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <VideoView
            android:id="@+id/videoBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Simple dark overlay for iOS-style clean background -->
    <View
        android:id="@+id/darkOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10000000" />

    <!-- Dummy invisible views for backward compatibility (removed from UI) -->
    <FrameLayout
        android:id="@+id/topGlassBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">
        
        <FrameLayout android:id="@+id/btnSearchIcon" android:layout_width="0dp" android:layout_height="0dp" />
        <TextView android:id="@+id/tvTopBarCityName" android:layout_width="0dp" android:layout_height="0dp" />
        <FrameLayout android:id="@+id/btnFavoritesIcon" android:layout_width="0dp" android:layout_height="0dp" />
        <FrameLayout android:id="@+id/btnSettingsIcon" android:layout_width="0dp" android:layout_height="0dp" />
    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone">
        
        <EditText android:id="@+id/etCityName" android:layout_width="0dp" android:layout_height="0dp" android:inputType="text" android:autofillHints="postalAddress" />
        <ImageButton android:id="@+id/btnSearch" android:layout_width="0dp" android:layout_height="0dp" android:contentDescription="Search" />
        <LinearLayout android:id="@+id/btnCurrentLocation" android:layout_width="0dp" android:layout_height="0dp" />
    </LinearLayout>

    <!-- Main Scrollable Content (iOS Style) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/weatherRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Status Bar Spacer for iOS style -->
            <View
                android:layout_width="match_parent"
                android:layout_height="44dp" />

            <!-- iOS Top Section: City Name & Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="34dp"
                android:paddingHorizontal="24dp">

                <!-- City Name with Add Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- City Name (iOS Style - centered) -->
                    <TextView
                        android:id="@+id/tvCityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hanoi"
                        android:textColor="#FFFFFF"
                        android:textSize="34sp"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.01"
                        android:gravity="center"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        tools:ignore="HardcodedText" />

                    <!-- Add City Button (Small +) -->
                    <ImageView
                        android:id="@+id/btnAddCity"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Add City"
                        android:alpha="0.8"
                        app:tint="#FFFFFF"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Current Temperature (iOS Style - 96sp) -->
                <TextView
                    android:id="@+id/tvTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="23°"
                    android:textColor="#FFFFFF"
                    android:textSize="96sp"
                    android:fontFamily="sans-serif-thin"
                    android:letterSpacing="-0.01"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    tools:ignore="HardcodedText" />

                <!-- Weather Description (iOS Style) -->
                <TextView
                    android:id="@+id/tvWeatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Trời Nhiều mây"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    tools:ignore="HardcodedText" />

                <!-- High/Low Temperature (iOS Style) -->
                <TextView
                    android:id="@+id/tvTempRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="C:25°  T:19°"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <!-- iOS Hourly Forecast Card with Glassmorphism -->
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blurViewHourly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#00000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <!-- iOS Weather Info Text -->
                    <TextView
                        android:id="@+id/tvWeatherInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Có mây sẽ tiếp tục đến hết ngày. Gió giật lên đến 11 km/h."
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp"
                        tools:ignore="HardcodedText" />

                    <!-- Divider Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="12dp"
                        android:background="#40FFFFFF" />

                    <!-- Hourly Forecast (iOS Style) -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:id="@+id/hourlyForecastContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </HorizontalScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </eightbitlab.com.blurview.BlurView>

            <!-- iOS 10-Day Forecast Card with Glassmorphism -->
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blurViewForecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#00000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!-- 10-Day Forecast Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="#99FFFFFF"
                            android:contentDescription="Calendar"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="10-DAY FORECAST"
                            android:textColor="#99FFFFFF"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05"
                            android:fontFamily="sans-serif-medium"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#40FFFFFF" />

                    <!-- Daily Forecast List (10 days) -->
                    <LinearLayout
                        android:id="@+id/dailyForecastContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="8dp">
                    </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </eightbitlab.com.blurview.BlurView>

            <!-- Weather Details Cards Section -->
            <eightbitlab.com.blurview.BlurView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#00000000">

                    <!-- Hidden buttons for compatibility -->
                    <TextView
                        android:id="@+id/btnHourly"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/btnWeekly"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/tabIndicator"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <!-- iOS Style Weather Details Grid (keep all features) -->
                    <LinearLayout
                        android:id="@+id/weatherDetailsSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <!-- More Features Button (iOS styled) -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnMoreFeatures"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ios_card_background"
                                android:padding="14dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✨"
                                    android:textSize="20sp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="AI Features"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Maps, Outfit &amp; Activity Suggestions"
                                        android:textSize="11sp"
                                        android:textColor="#B0FFFFFF" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    android:tint="#666666"
                                    tools:ignore="UseAppTint" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Air Quality Index (iOS styled) -->
                        <include
                            android:id="@+id/card_air_quality"
                            layout="@layout/card_air_quality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp" />

                        <!-- Hidden chart views for compatibility -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone">

                            <com.example.weatherapp.ui.views.charts.WeatherLineChart
                                android:id="@+id/chartTemperatureMain"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />

                            <com.example.weatherapp.ui.views.charts.AnimatedProgressRing
                                android:id="@+id/ringHumidityMain"
                                android:layout_width="120dp"
                                android:layout_height="120dp" />

                            <com.example.weatherapp.ui.views.charts.WindSpeedGauge
                                android:id="@+id/gaugeWindSpeedMain"
                                android:layout_width="match_parent"
                                android:layout_height="150dp" />

                            <com.example.weatherapp.ui.views.charts.AnimatedProgressRing
                                android:id="@+id/ringUvIndexMain"
                                android:layout_width="120dp"
                                android:layout_height="120dp" />
                        </FrameLayout>

                        <!-- Forecast Summary (iOS styled) -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ios_card_background"
                                android:padding="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="WEEKEND FORECAST"
                                    android:textColor="#B0FFFFFF"
                                    android:textSize="13sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="0.05"
                                    android:layout_marginBottom="8dp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tvForecastSummary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rain expected in 6 of the next 10 days"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="2dp"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Row 1: UV Index & Sunrise (iOS style) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardUvIndex"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_uv_index" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSunrise"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_sunrise" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Row 2: Wind & Rainfall (iOS style) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardWind"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_wind" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardRainfall"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_rain_probability" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Row 3: Feels Like & Humidity (iOS style) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardFeelsLike"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_feels_like" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardHumidity"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_humidity" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Row 4: Visibility & Pressure (iOS style) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardVisibility"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_visibility" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardPressure"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_pressure" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Hidden chart views for compatibility -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone">

                            <com.example.weatherapp.ui.views.charts.WeatherLineChart
                                android:id="@+id/chartTemperature"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />

                            <com.example.weatherapp.ui.views.charts.AnimatedProgressRing
                                android:id="@+id/ringHumidity"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />

                            <com.example.weatherapp.ui.views.charts.AnimatedProgressRing
                                android:id="@+id/ringUvIndex"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />

                            <com.example.weatherapp.ui.views.charts.WindSpeedGauge
                                android:id="@+id/gaugeWindSpeed"
                                android:layout_width="match_parent"
                                android:layout_height="150dp" />
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </eightbitlab.com.blurview.BlurView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- iOS Bottom Navigation Bar with Glassmorphism -->
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurViewBottomNav"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="0dp">

            <!-- Navigation Buttons Row -->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <!-- Favorites Button -->
            <LinearLayout
                android:id="@+id/fabAddToFavorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/ivFavoriteIcon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_heart_line"
                    app:tint="#FFFFFF"
                    android:contentDescription="Favorites" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorites"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Weather Button (Active) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_weather_cloudy_line"
                    app:tint="#FFFFFF"
                    android:contentDescription="Weather" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Settings Button -->
            <LinearLayout
                android:id="@+id/btnSettingsNav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_settings_line"
                    app:tint="#FFFFFF"
                    android:contentDescription="Settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Home Indicator -->
        <View
            android:layout_width="134dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ios_home_indicator" />
        </LinearLayout>
    </eightbitlab.com.blurview.BlurView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#FFFFFF"
        android:visibility="gone" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Error loading weather data"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <!-- Hidden Views for compatibility -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvWeatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
