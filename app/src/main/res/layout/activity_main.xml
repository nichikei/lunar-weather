<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ios_weather_gradient_bg"
    tools:context=".MainActivity">

    <!-- Simple dark overlay for iOS-style clean background -->
    <View
        android:id="@+id/darkOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10000000" />

    <!-- iOS-style Top Bar (Invisible but functional) -->
    <FrameLayout
        android:id="@+id/topGlassBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:elevation="8dp">

        <!-- Hidden buttons for compatibility -->
        <FrameLayout
            android:id="@+id/btnSearchIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="6dp"
            android:visibility="invisible"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tvTopBarCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/btnFavoritesIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="56dp"
            android:visibility="invisible"
            android:clickable="true"
            android:focusable="true" />

        <FrameLayout
            android:id="@+id/btnSettingsIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="6dp"
            android:visibility="invisible"
            android:clickable="true"
            android:focusable="true" />
    </FrameLayout>

    <!-- Main Scrollable Content (iOS Style) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/weatherRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Status Bar Spacer for iOS style -->
            <View
                android:layout_width="match_parent"
                android:layout_height="44dp" />

            <!-- iOS Top Section: City Name & Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="34dp"
                android:paddingHorizontal="24dp">

                <!-- City Name (iOS Style - centered) -->
                <TextView
                    android:id="@+id/tvCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hanoi"
                    android:textColor="#FFFFFF"
                    android:textSize="37sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="-0.005"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />

                <!-- Current Temperature (iOS Style - 102sp) -->
                <TextView
                    android:id="@+id/tvTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="21°"
                    android:textColor="#FFFFFF"
                    android:textSize="102sp"
                    android:fontFamily="sans-serif-thin"
                    android:letterSpacing="-0.005"
                    tools:ignore="HardcodedText" />

                <!-- Weather Description (iOS Style) -->
                <TextView
                    android:id="@+id/tvWeatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Partly Cloudy"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"
                    tools:ignore="HardcodedText" />

                <!-- High/Low Temperature (iOS Style) -->
                <TextView
                    android:id="@+id/tvTempRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="H:29°  L:15°"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:fontFamily="sans-serif-medium"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <!-- Hidden Search Container for compatibility -->
            <LinearLayout
                android:id="@+id/searchContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/etCityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:autofillHints="postalAddress" />

                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="gone"
                    android:contentDescription="@string/search_city_hint" />

                <LinearLayout
                    android:id="@+id/btnCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- iOS Hourly Forecast Card with Glassmorphism -->
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blurViewHourly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#4D000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                    <!-- iOS Weather Info Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cloudy conditions from 1AM-9AM, with\nshowers expected at 9AM."
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp"
                        tools:ignore="HardcodedText" />

                    <!-- Divider Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginTop="15dp"
                        android:background="#80FFFFFF" />

                    <!-- Hourly Forecast (iOS Style) -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:id="@+id/hourlyForecastContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </HorizontalScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </eightbitlab.com.blurview.BlurView>

            <!-- iOS 10-Day Forecast Card with Glassmorphism -->
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blurViewForecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#4D000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <!-- 10-Day Forecast Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="#FFFFFF"
                            android:contentDescription="Calendar"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:text="10-DAY  FORECAST"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="#80FFFFFF" />

                    <!-- Hidden buttons for compatibility -->
                    <TextView
                        android:id="@+id/btnHourly"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/btnWeekly"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/tabIndicator"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <!-- iOS Style Weather Details Grid (keep all features) -->
                    <LinearLayout
                        android:id="@+id/weatherDetailsSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="16dp">

                        <!-- More Features Button (iOS styled) -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnMoreFeatures"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ios_card_background"
                                android:padding="14dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="✨"
                                    android:textSize="20sp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="AI Features"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Maps, Outfit &amp; Activity Suggestions"
                                        android:textSize="11sp"
                                        android:textColor="#B0FFFFFF" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    android:tint="#FFFFFF"
                                    android:alpha="0.6"
                                    tools:ignore="UseAppTint" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Air Quality Index (iOS styled) -->
                        <include
                            android:id="@+id/card_air_quality"
                            layout="@layout/card_air_quality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp" />

                        <!-- Hidden chart views for compatibility -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone">

                            <com.example.weatherapp.ui.views.charts.WeatherLineChart
                                android:id="@+id/chartTemperatureMain"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />

                            <com.example.weatherapp.ui.views.charts.AnimatedProgressRing
                                android:id="@+id/ringHumidityMain"
                                android:layout_width="120dp"
                                android:layout_height="120dp" />

                            <com.example.weatherapp.ui.views.charts.WindSpeedGauge
                                android:id="@+id/gaugeWindSpeedMain"
                                android:layout_width="match_parent"
                                android:layout_height="150dp" />

                            <com.example.weatherapp.ui.views.charts.AnimatedProgressRing
                                android:id="@+id/ringUvIndexMain"
                                android:layout_width="120dp"
                                android:layout_height="120dp" />
                        </FrameLayout>

                        <!-- Forecast Summary (iOS styled) -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ios_card_background"
                                android:padding="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="WEEKEND FORECAST"
                                    android:textColor="#B0FFFFFF"
                                    android:textSize="13sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="0.05"
                                    android:layout_marginBottom="8dp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tvForecastSummary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rain expected in 6 of the next 10 days"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="2dp"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Row 1: UV Index & Sunrise (iOS style) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardUvIndex"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_uv_index" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSunrise"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_sunrise" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Row 2: Wind & Rainfall (iOS style) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardWind"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_wind" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardRainfall"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_rain_probability" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Row 3: Feels Like & Humidity (iOS style) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardFeelsLike"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_feels_like" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardHumidity"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_humidity" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Row 4: Visibility & Pressure (iOS style) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardVisibility"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_visibility" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardPressure"
                                android:layout_width="0dp"
                                android:layout_height="155dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@android:color/transparent">

                                <include layout="@layout/card_pressure" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!-- Hidden chart views for compatibility -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone">

                            <com.example.weatherapp.ui.views.charts.WeatherLineChart
                                android:id="@+id/chartTemperature"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />

                            <com.example.weatherapp.ui.views.charts.AnimatedProgressRing
                                android:id="@+id/ringHumidity"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />

                            <com.example.weatherapp.ui.views.charts.AnimatedProgressRing
                                android:id="@+id/ringUvIndex"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />

                            <com.example.weatherapp.ui.views.charts.WindSpeedGauge
                                android:id="@+id/gaugeWindSpeed"
                                android:layout_width="match_parent"
                                android:layout_height="150dp" />
                        </FrameLayout>

                    </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </eightbitlab.com.blurview.BlurView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- iOS Bottom Navigation Bar with Glassmorphism -->
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurViewBottomNav"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="0dp">

            <!-- Navigation Buttons Row -->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <!-- Map Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_map_pin_line"
                    app:tint="#FFFFFF"
                    android:contentDescription="Map" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Weather Button (Active) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_weather_cloudy_line"
                    app:tint="#FFFFFF"
                    android:contentDescription="Weather" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Settings Button -->
            <LinearLayout
                android:id="@+id/fabAddToFavorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings_line"
                    app:tint="#FFFFFF"
                    android:contentDescription="Settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Home Indicator -->
        <View
            android:layout_width="134dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ios_home_indicator" />
        </LinearLayout>
    </eightbitlab.com.blurview.BlurView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#FFFFFF"
        android:visibility="gone" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Error loading weather data"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <!-- Hidden Views for compatibility -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
