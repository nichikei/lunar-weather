<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:paddingBottom="32dp">

        <!-- Premium Glass Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/settings_header_background"
                android:paddingHorizontal="16dp"
                android:elevation="0dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/settings_button_background"
                    android:src="@drawable/ic_back"
                    app:tint="@color/text_primary"
                    android:contentDescription="@string/back_button"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings"
                    android:textColor="@color/text_primary"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="16dp" />

                <ImageButton
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/settings_button_background"
                    android:src="@drawable/ic_more"
                    app:tint="@color/text_primary"
                    android:contentDescription="@string/more_options"
                    android:padding="10dp"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>

        <!-- Settings Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Temperature Unit Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature_unit"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                tools:ignore="RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background"
                    android:paddingVertical="6dp">

                    <!-- Celsius Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_temperature"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/temperature_icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/celsius"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/celsius_unit"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchCelsius"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="true"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#33FFFFFF"
                        android:layout_marginStart="48dp"
                        android:layout_marginEnd="12dp" />

                    <!-- Fahrenheit Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_temperature"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/temperature_icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/fahrenheit"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fahrenheit_unit"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchFahrenheit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="false"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Wind Speed Unit Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind_speed_unit"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                tools:ignore="RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background"
                    android:paddingVertical="6dp">

                    <!-- m/s Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wind"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/wind_icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/meters_per_second"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ms_unit"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchWindMs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="true"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#33FFFFFF"
                        android:layout_marginStart="48dp"
                        android:layout_marginEnd="12dp" />

                    <!-- km/h Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_wind"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/wind_icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kilometers_per_hour"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kmh_unit"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchWindKmh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="false"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pressure Unit Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressure_unit"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                tools:ignore="RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background"
                    android:paddingVertical="6dp">

                    <!-- hPa Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_pressure"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/pressure_icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/hectopascals"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hpa_unit"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchPressureHpa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="true"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#33FFFFFF"
                        android:layout_marginStart="48dp"
                        android:layout_marginEnd="12dp" />

                    <!-- mbar Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_pressure"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/pressure_icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/millibars"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mbar_unit"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchPressureMbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="false"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Language Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                tools:ignore="RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background"
                    android:paddingVertical="6dp">

                    <!-- English Option -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_language"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/language_icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/english"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/en_code"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchEnglish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="true"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#33FFFFFF"
                        android:layout_marginStart="48dp"
                        android:layout_marginEnd="12dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Preferences Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preferences"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                tools:ignore="RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/settings_card_background"
                    android:paddingVertical="6dp">

                    <!-- Dark Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_moon"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/dark_mode_icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dark_mode"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/use_dark_theme"
                                android:textColor="#80FFFFFF"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="true"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#33FFFFFF"
                        android:layout_marginStart="48dp"
                        android:layout_marginEnd="12dp" />

                    <!-- Notifications -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/settings_row_background">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notification"
                            app:tint="@color/text_primary"
                            android:contentDescription="@string/notifications_icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/notifications"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weather_alerts_and_updates"
                                android:textColor="#80FFFFFF"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:checked="true"
                            app:thumbTint="@color/settings_switch_thumb_tint"
                            app:trackTint="@color/settings_switch_track_tint" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- About Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/btnAbout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:background="@drawable/settings_card_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/settings_row_background">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/text_primary"
                        android:contentDescription="@string/about_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/about"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#B3FFFFFF"
                        android:contentDescription="@string/navigate" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- App Version -->
            <TextView
                android:layout_width="wrap_content"
