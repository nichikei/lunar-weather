<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/weather_card_ripple"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Icon and Title Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text="ðŸ’¨"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIND"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:fontFamily="@font/poppins"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Compass Circle -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="8dp">

        <!-- Compass Background -->
        <View
            android:id="@+id/compassCircle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/wind_compass_simple" />

        <!-- Cardinal Directions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/compassCircle"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/poppins"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/compassCircle"
            android:layout_marginTop="4dp" />

        <!-- Wind Speed in Center -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvDetailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.7"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:fontFamily="@font/poppins"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Wind Direction Indicators -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_toStartOf="@id/compassCircle"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†’"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_toEndOf="@id/compassCircle"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp" />
    </RelativeLayout>
</LinearLayout>
