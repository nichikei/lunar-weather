<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ios_dialog"
    android:padding="0dp">

    <!-- Header với nút đóng -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_weather_cloud"
            android:tint="#FFFFFF"
            android:alpha="0.9"/>

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Điều kiện thời tiết"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"/>

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#FFFFFF"
            android:alpha="0.8"
            android:contentDescription="Close"/>
    </LinearLayout>

    <!-- Date & Time Info -->
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thứ Tư, ngày 12 tháng 11, 2025"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:alpha="0.8"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"/>

    <!-- Current Temperature Display -->
    <LinearLayout
        android:id="@+id/layoutCurrentTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDateTime">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCurrentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23°"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"/>

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_weather_cloud"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvTempRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C:25° T:19°"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.7"
                android:fontFamily="sans-serif"/>

            <ImageButton
                android:id="@+id/btnToggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_expand_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FFFFFF"
                android:alpha="0.8"
                android:contentDescription="Toggle"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ScrollView for charts -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewCharts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="500dp"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@id/layoutCurrentTemp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Temperature Heatmap Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bản đồ nhiệt"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:alpha="0.9"
                android:fontFamily="sans-serif-medium"/>

            <!-- Temperature Heatmap Chart -->
            <com.example.weatherapp.ui.views.charts.TemperatureHeatmapView
                android:id="@+id/heatmapTemperature"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#33FFFFFF"/>

            <!-- Rain Probability Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khả năng có mưa"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:alpha="0.9"
                android:fontFamily="sans-serif-medium"/>

            <!-- Rain Probability Chart -->
            <com.example.weatherapp.ui.views.charts.RainProbabilityChartView
                android:id="@+id/chartRainProbability"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Additional Weather Info Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp">

                <!-- Row 1: Humidity & Wind -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_ios_weather_card"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Độ ẩm"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:alpha="0.6"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <!-- Wind Speed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_ios_weather_card"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gió"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:alpha="0.6"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 km/h"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2: Pressure & UV Index -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Pressure -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_ios_weather_card"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Áp suất"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:alpha="0.6"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1013 hPa"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <!-- UV Index -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_ios_weather_card"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉ số UV"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp"
                            android:alpha="0.6"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvUVIndex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
