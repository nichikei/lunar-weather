<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="64dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/weekly_forecast_item_background"
    android:padding="12dp"
    android:layout_marginEnd="12dp">

    <!-- Day Text -->
    <TextView
        android:id="@+id/tvDay"
        style="@style/TextStyle.Subheadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MON"
        android:layout_marginBottom="12dp"
        tools:ignore="HardcodedText" />

    <!-- Weather Icon Container -->
    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginBottom="12dp">

        <!-- Weather Icon -->
        <ImageView
            android:id="@+id/ivWeeklyIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="-4dp"
            android:src="@drawable/sun_cloud_mid_rain"
            android:scaleType="fitCenter"
            android:contentDescription="@string/app_name" />

        <!-- Rain Probability -->
        <TextView
            android:id="@+id/tvWeeklyRainProbability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="30%"
            android:textColor="@color/accent_cyan"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="visible"
            tools:ignore="HardcodedText" />
    </FrameLayout>

    <!-- Temperature -->
    <TextView
        android:id="@+id/tvWeeklyTemp"
        style="@style/TextStyle.Title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20Â°"
        tools:ignore="HardcodedText" />
</LinearLayout>
