<?xml version="1.0" encoding="utf-8"?>
<!-- iOS Style City Item - Minimalist Design -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cityCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ios_card_background"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:minHeight="72dp">

        <!-- Left: City Info -->
        <LinearLayout
            android:id="@+id/leftSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tvTemperature"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <!-- City Name -->
            <TextView
                android:id="@+id/tvCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hanoi"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />

            <!-- Weather Description / Info -->
            <TextView
                android:id="@+id/tvWeatherDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partly Cloudy"
                android:textColor="#CCFFFFFF"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Right: Temperature -->
        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="27Â°"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:fontFamily="sans-serif-light"
            tools:ignore="HardcodedText" />

        <!-- Hidden views for compatibility -->
        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTempRange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:contentDescription="Add to favorites" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
