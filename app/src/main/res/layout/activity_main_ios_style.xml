<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ios_weather_gradient_bg"
    tools:context=".ui.activities.MainActivity">

    <!-- iOS Style Background Gradient -->
    <ImageView
        android:id="@+id/ivBackgroundGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Weather background"
        android:src="@drawable/ios_weather_gradient_bg" />

    <!-- Main Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Status Bar Spacer -->
            <View
                android:id="@+id/statusBarSpacer"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

            <!-- Top Section: City Name & Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="34dp">

                <!-- City Name -->
                <TextView
                    android:id="@+id/tvCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seongnam-si"
                    android:textColor="#FFFFFF"
                    android:textSize="37sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="-0.005"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />

                <!-- Current Temperature -->
                <TextView
                    android:id="@+id/tvMainTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="21°"
                    android:textColor="#FFFFFF"
                    android:textSize="102sp"
                    android:fontFamily="sans-serif-thin"
                    android:letterSpacing="-0.005"
                    tools:ignore="HardcodedText" />

                <!-- Weather Description -->
                <TextView
                    android:id="@+id/tvWeatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Partly Cloudy"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"
                    tools:ignore="HardcodedText" />

                <!-- High/Low Temperature -->
                <TextView
                    android:id="@+id/tvHighLowTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="H:29°  L:15°"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp"
                    android:fontFamily="sans-serif-medium"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <!-- Hourly Forecast Card (iOS Style) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHourlyForecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:background="@drawable/ios_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="@drawable/ios_card_background">

                    <!-- Hourly Forecast Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cloudy conditions from 1AM-9AM, with\nshowers expected at 9AM."
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp"
                        tools:ignore="HardcodedText" />

                    <!-- Divider Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginTop="15dp"
                        android:background="#80FFFFFF" />

                    <!-- Hourly Items RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvHourlyForecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        tools:listitem="@layout/item_hourly_forecast_ios" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 10-Day Forecast Card (iOS Style) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card10DayForecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                android:background="@drawable/ios_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/ios_card_background">

                    <!-- 10-Day Forecast Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:gravity="center_vertical">

                        <!-- Calendar Icon -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#xF0049;"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            tools:ignore="HardcodedText" />

                        <!-- Title -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:text="10-DAY  FORECAST"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="#80FFFFFF" />

                    <!-- Daily Forecast Items -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDailyForecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_daily_forecast_ios" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- iOS Style Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/ios_bottom_nav_background">

        <!-- Home Indicator Line -->
        <ImageView
            android:layout_width="134dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58dp"
            android:contentDescription="Home indicator"
            android:src="@drawable/ios_home_indicator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="8dp">

            <!-- Location Button -->
            <FrameLayout
                android:id="@+id/btnLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="􀙊"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp"
                    android:fontFamily="sans-serif-medium"
                    tools:ignore="HardcodedText" />

            </FrameLayout>

            <!-- Weather Button (Center with indicator) -->
            <FrameLayout
                android:id="@+id/btnWeather"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <!-- Active Indicator Dot -->
                    <View
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:background="@drawable/ios_active_indicator" />

                    <!-- Weather Icon -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:text="􀋒"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-medium"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </FrameLayout>

            <!-- Menu Button -->
            <FrameLayout
                android:id="@+id/btnMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="􀋲"
                    android:textColor="#FFFFFF"
                    android:textSize="23sp"
                    android:fontFamily="sans-serif-medium"
                    tools:ignore="HardcodedText" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
