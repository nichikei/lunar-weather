<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ios_card_background"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Icon and Title Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text="ðŸŒ…"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUNRISE"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:fontFamily="@font/poppins"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Sunrise Time -->
    <TextView
        android:id="@+id/tvDetailValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:28 AM"
        android:textColor="@color/text_primary"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <!-- iOS Sun Arc -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp">

        <!-- Horizon Line -->
        <View
            android:id="@+id/horizonLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#30000000" />

        <!-- Sun Arc Path (Semi-circle) -->
        <View
            android:id="@+id/sunArcPath"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ios_sun_arc_gradient"
            android:alpha="0.6" />

        <!-- Sunrise Marker -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:orientation="vertical"
            android:gravity="center">
            
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/ios_sun_dot" />
            
        </LinearLayout>

        <!-- Current Sun Position -->
        <LinearLayout
            android:id="@+id/currentSunPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="8dp">
            
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ios_sun_dot" />
            
        </LinearLayout>

        <!-- Sunset Marker -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:orientation="vertical"
            android:gravity="center">
            
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/ios_sun_dot" />
            
        </LinearLayout>

    </FrameLayout>

    <!-- Sunset Time -->
    <TextView
        android:id="@+id/tvDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset: 7:25PM"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:fontFamily="@font/poppins"
        tools:ignore="HardcodedText" />
</LinearLayout>
