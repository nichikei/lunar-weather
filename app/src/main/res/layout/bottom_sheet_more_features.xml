<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ios_card_background"
    android:paddingTop="8dp"
    android:paddingBottom="32dp">

    <!-- Handle Bar (iOS style) -->
    <View
        android:layout_width="36dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bottom_sheet_handle"
        android:alpha="0.4" />

    <!-- Title (iOS style) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="6dp"
        android:text="More Features"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="-0.01" />

    <!-- Subtitle (iOS style) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:text="Explore weather features &amp; tools"
        android:textSize="15sp"
        android:textColor="#B3FFFFFF"
        android:fontFamily="sans-serif" />

    <!-- Section Header (iOS style) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:text="MAPS &amp; TOOLS"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#99FFFFFF"
        android:letterSpacing="0.04"
        android:fontFamily="sans-serif-medium" />

    <!-- Weather Maps Option -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWeatherMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#4D000000"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Icon (iOS style - no background) -->
            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="ðŸ—ºï¸"
                android:textSize="32sp" />

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather Maps"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Interactive radar &amp; temperature maps"
                    android:textSize="14sp"
                    android:textColor="#B3FFFFFF"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Arrow Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_forward"
                android:tint="#99FFFFFF" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Voice Assistant Option -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardVoiceAssistant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#4D000000"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸŽ™ï¸"
                android:textSize="32sp"
                android:gravity="center" />

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice Assistant"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Ask weather questions with your voice"
                    android:textSize="14sp"
                    android:textColor="#B3FFFFFF"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Arrow Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_forward"
                android:tint="#99FFFFFF" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Weather Alarms Option -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWeatherAlarms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#4D000000"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="â°"
                android:textSize="32sp"
                android:gravity="center" />

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather Alarms"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Smart alarms based on weather conditions"
                    android:textSize="14sp"
                    android:textColor="#B3FFFFFF"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Arrow Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_forward"
                android:tint="#99FFFFFF" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- AI Recommendations Category -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:text="AI RECOMMENDATIONS"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#99FFFFFF"
        android:letterSpacing="0.04"
        android:fontFamily="sans-serif-medium" />

    <!-- AI Outfit Suggestions -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOutfitSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#4D000000"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="ðŸ‘”"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Outfit Suggestions"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="What to wear based on weather"
                    android:textSize="14sp"
                    android:textColor="#B3FFFFFF"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_forward"
                android:tint="#99FFFFFF" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Activity Suggestions -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardActivitySuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#4D000000"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="#2D000000">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_target"
                    android:tint="#FFFFFF" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity Suggestions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Best activities for today's weather"
                    android:textSize="13sp"
                    android:textColor="#B3FFFFFF"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                android:tint="#99FFFFFF" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
