<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="300dp"
    android:orientation="vertical"
    android:background="@drawable/bg_ios_dialog"
    android:padding="0dp">

    <!-- Header với nút đóng -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_weather_cloud"
            android:tint="#FFFFFF"
            android:alpha="0.9"/>

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dự báo thời tiết"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"/>

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#FFFFFF"
            android:alpha="0.8"
            android:contentDescription="Close"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="500dp"
        android:fillViewport="false"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Date Info -->
            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thứ Tư, ngày 12 tháng 11, 2025"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:alpha="0.8"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:fontFamily="sans-serif"/>

            <!-- Current Temperature Display -->
            <LinearLayout
                android:id="@+id/layoutCurrentTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_weather_cloud"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvCurrentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23°"
            android:textColor="#FFFFFF"
            android:textSize="64sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partly Cloudy"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:alpha="0.8"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

            <!-- Weather Info Grid -->
            <LinearLayout
                android:id="@+id/layoutWeatherInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="20dp">

        <!-- Rain Probability (only info card with real data) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ios_weather_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khả năng mưa"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:alpha="0.6"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvRainProb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>



        <!-- Biểu đồ nhiệt độ 24 giờ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ios_weather_card"
            android:padding="16dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NHIỆT ĐỘ 24 GIỜ"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:alpha="0.6"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/temperatureChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>

        <!-- Biểu đồ khả năng mưa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ios_weather_card"
            android:padding="16dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KHẢ NĂNG MƯA"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:alpha="0.6"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/rainChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            </LinearLayout>
            
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
