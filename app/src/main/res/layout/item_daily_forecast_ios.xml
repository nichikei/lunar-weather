<?xml version="1.0" encoding="utf-8"?>
<!-- iOS Style Daily Forecast Item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Day Name -->
        <TextView
            android:id="@+id/tvDayName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            tools:ignore="HardcodedText" />

        <!-- Weather Icon -->
        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Weather icon"
            android:src="@drawable/ic_weather_sunny" />

        <!-- Temperature Bar Container -->
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Low Temperature -->
            <TextView
                android:id="@+id/tvLowTemp"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="15°"
                android:textColor="#FFFFFF"
                android:alpha="0.3"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                tools:ignore="HardcodedText" />

            <!-- Temperature Bar Background -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ios_temp_bar_background">

                <!-- Temperature Bar Gradient -->
                <View
                    android:id="@+id/viewTempBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/ios_temp_bar_gradient" />

            </FrameLayout>

            <!-- High Temperature -->
            <TextView
                android:id="@+id/tvHighTemp"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:text="29°"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Rain Probability (optional) -->
        <TextView
            android:id="@+id/tvRainProbability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="50%"
            android:textColor="#81CFFA"
            android:textSize="15sp"
            android:fontFamily="sans-serif-semibold"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="7dp"
        android:background="#80FFFFFF" />

</LinearLayout>
