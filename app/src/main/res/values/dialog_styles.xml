<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- iOS Style Dialog Theme -->
    <style name="IOSDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@style/IOSDialogAnimation</item>
    </style>

    <!-- iOS Style Dialog Animation -->
    <style name="IOSDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>
</resources>
