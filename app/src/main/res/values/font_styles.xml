<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography based on SF Pro Display/Text from Figma design -->

    <!-- Text Styles - Small sizes (SF Pro Text equivalent) -->
    <style name="TextStyle.Caption2" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.18</item>
    </style>

    <style name="TextStyle.Caption1" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="TextStyle.Footnote" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.38</item>
    </style>

    <style name="TextStyle.Subheadline" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
    </style>

    <style name="TextStyle.Callout" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.31</item>
    </style>

    <style name="TextStyle.Body" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>

    <style name="TextStyle.Headline" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.29</item>
    </style>

    <!-- Display Styles - Large sizes (SF Pro Display equivalent) -->
    <style name="TextStyle.Title3" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.20</item>
    </style>

    <style name="TextStyle.Title2" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.27</item>
    </style>

    <style name="TextStyle.Title1" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <style name="TextStyle.LargeTitle" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <!-- Bold Variants -->
    <style name="TextStyle.Caption2.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.Caption1.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.Footnote.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.Subheadline.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.Title3.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.Title2.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.Title1.Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyle.LargeTitle.Bold">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Special style for large temperature display -->
    <style name="TextStyle.Temperature" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Card Title Style (for weather detail cards) -->
    <style name="TextStyle.CardTitle" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Card Value Style -->
    <style name="TextStyle.CardValue" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Card Description Style -->
    <style name="TextStyle.CardDescription" parent="android:TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.38</item>
    </style>
</resources>
